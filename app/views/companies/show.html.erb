<div class="container py-5">
  <h3>Company</h3>
  <div class="row">
    <div class="col">
      <%= link_to "< Companies", companies_path %>
    </div>
    <div class="col text-right">
      <%= link_to "Edit", edit_company_path %>
    </div>
    <div>
      <%= link_to "Delete", @company, method: :delete,
                  :data => {:confirm => "Want to delete #{@company.name} company for sure?"}%>
    </div>
  </div>
  <div class="bg-success">
    <div class="container p-5 text-white">
      <h1><%= @company.name %></h1>
      <%if @company.location.present? %>
        <h3><%= @company.location[:city]%>, <%= @company.location[:state_code]%></h3>
      <%else %>
        <h3>No Location found!</h3>
      <%end %>
    </div>
  </div>
  <% if @company.description.present? %>
    <div class="bg-light p-5">
      <%= @company.description %>
    </div>
  <% end %>
  <div class="bg-success text-white text-center py-3">
    <p class="lead"><%= @company.phone %> — <%= @company.email %></p>
  </div>
</div>
